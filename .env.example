# ===========================================
# DasTern Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# Database
DB_USER=dastern
DB_PASSWORD=dastern_secure_password_2026
DB_NAME=dastern
DB_PORT=5432

# Backend (Next.js)
DATABASE_URL=postgresql://dastern:dastern_secure_password_2026@postgres:5432/dastern
JWT_SECRET=your-jwt-secret-key-here
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Services - Internal Docker Network URLs
OCR_SERVICE_URL=http://ocr-service:8002
LLM_SERVICE_URL=http://ai-llm-service:8001

# OCR Service Configuration
OCR_LANG=en,kh
OCR_CONFIDENCE_THRESHOLD=0.7

# LLM Service Configuration
OLLAMA_HOST=http://ollama:11434
LLM_MODEL=llama3.1:8b
LLM_ALLOWED_LANGUAGES=en,kh,fr
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.7

# Ollama Container Configuration
# For 8GB RAM laptops, use these models:
# - llama3.1:8b (recommended)
# - llama3:8b
# - mistral:7b
# Avoid 13B+ models with 8GB RAM

# Development
NODE_ENV=development
PYTHON_ENV=development

