# ===========================================
# OCR Service Environment Configuration
# ===========================================
# Copy this file to .env and adjust values

# Service Configuration
APP_NAME=OCR Service
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8002

# Tesseract Configuration
# Languages: khm (Khmer), eng (English), fra (French)
# Order matters - put dominant language first
OCR_LANGUAGES=khm+eng+fra
OCR_OEM=3
OCR_PSM=6
OCR_CONFIDENCE_THRESHOLD=0

# Image Preprocessing
DENOISE_STRENGTH=15
ADAPTIVE_THRESHOLD_BLOCK_SIZE=31
ADAPTIVE_THRESHOLD_C=10

# File Storage
UPLOAD_DIR=uploads
RESULTS_DIR=results
MAX_FILE_SIZE_MB=10

# API
API_V1_PREFIX=/api/v1
